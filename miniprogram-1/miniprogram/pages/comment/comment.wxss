/* pages/comment/comment.wxss */
/*背景图片*/
.detail-container{
  height:400rpx;
  opacity: .9;
  filter: blur(40rpx);/*滤镜效果 高斯模糊*/
}
/*遮罩层*/
.detail-mask{
  width:100%;
  height:400rpx;
  background:#333;
  position:absolute;
  left:0;
  top:0;
  z-index: -1;/*显示在模糊图片的底层*/
}
/*电影的详情列表*/
.detail-info{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:400rpx;
  display:flex;
  padding:20rpx;
}
/*图片的样式*/
.detail-img{
  width:320rpx;
  height:90%; /*图片的高度占父元素的90 %*/
  margin-right:24rpx;
}
/*右侧介绍*/
.detail{
  line-height: 60rpx;
}
/*右侧介绍*/
.detail view{
  color:#fff;
  font-size:25rpx;
}
/*右侧电影的分数*/
.detail>.detail-sc{
  color:#fc0;
  font-size:36rpx;
}
/*电影的描述*/
.desc{
  color:#555;
  font-size: 24rpx;
  padding:20rpx;
}
/*上传预览的图片*/
.comment-img{
  width:200rpx;
  height:200rpx;
  margin-right:20rpx;
}